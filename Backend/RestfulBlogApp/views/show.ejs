<% include ./partials/header.ejs %>

	<div class="ui main text container segment">

		<div class="ui huge header">
			<%= blog.title %>
		</div>
		<div class="ui top attached">
			<div class="item">
				<img class="ui centered rounded medium image" src="<%= blog.image %>" alt="">

				<div class="content">
					<span>
						<%= blog.created.toDateString() %>
					</span>
				</div>

				<div class="description">
					<p>
						<%- blog.body %>
							</p>
				</div>

				<a class="ui big violet basic button" href="/blogs/<%= blog._id %>">Read more</a>

			</div>
		</div>
	</div>

	<% include ./partials/footer.ejs %>
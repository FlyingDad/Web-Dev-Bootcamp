<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Dummy</li>
				<li class="list-group-item">Dummy</li>
				<li class="list-group-item">Dummy</li>
			</div>
			<div>MAP</div>
		</div>
		
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= camp.image %>">
				<div class="caption">
				  <h4 class="pull-right">$9.00/night</h4>
					<h4><a><%= camp.name %></a></h4>
					
					<p><%= camp.description %></p>
					<p><em>Submitted by <%= camp.author.username %></em></p>
					<% if(user && camp.author.id.equals(user._id)) { %>
						<a class=" btn btn-xs btn-warning" href="/campgrounds/<%= camp._id %>/edit">Edit</a>
						<form class="delete-form" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">Delete</button>
						</form>
						<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
						<a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments/new">Add new comment</a>
				</div>
				<hr>				
				<% camp.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="pull-right">10 days ago</span>
							<p><%= comment.text %></p>
						</div>
						<% if(user && comment.author.id.equals(user._id)) { %>
						<a class="btn btn-xs btn-warning" href="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>/edit">Edit</a>

						<form class="delete-form" action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">Delete</button>
						</form>
						
						<% } %>
					</div>
							
				<% }); %>
					
			</div>
		</div>	
	</div>	
</div> 	

<% include ../partials/footer %>
<!-- end of container -->
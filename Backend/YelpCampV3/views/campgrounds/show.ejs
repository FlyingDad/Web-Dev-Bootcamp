<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Dummy</li>
				<li class="list-group-item">Dummy</li>
				<li class="list-group-item">Dummy</li>
			</div>
			<div>MAP</div>
		</div>
		
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= camp.image %>">
				<div class="caption">
				  <h4 class="pull-right">$9.00/night</h4>
					<h4><a><%= camp.name %></a></h4>
					
					<p><%= camp.description %></p>
					<p><em>Submitted by <%= camp.author.username %></em></p>
					<a class="btn btn-warning" href="/campgrounds/<%= camp._id %>/edit">Edit</a>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
						<a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments/new">Add new comment</a>
				</div>
				<hr>				
				<% camp.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="pull-right">10 days ago</span>
							<p><%= comment.text %></p>
						</div>
					</div>
							
				<% }); %>
					
			</div>
		</div>	
	</div>	
</div> 	

<% include ../partials/footer %>
<!-- end of container -->